<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="DarkGrayBody">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="DarkGrayBody.Edit">
        <item name="android:textCursorDrawable">@null</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/creditCardInputColor</item>
        <item name="android:paddingStart">12dp</item>
        <item name="android:paddingEnd">12dp</item>
        <item name="android:paddingTop">0dp</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:gravity">center_vertical|start</item>
    </style>

    <!-- Container -->
    <style name="DarkGrayBody.Edit.v2">
        <item name="android:textCursorDrawable">@null</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">#00ff00</item>
        <item name="android:paddingStart">12dp</item>
        <item name="android:paddingEnd">12dp</item>
        <item name="android:paddingTop">0dp</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:gravity">center_vertical|start</item>
    </style>

    <!-- Text field -->
    <style name="DarkGrayBody.InputLayout.v2" parent="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/stateful_shit</item>
        <item name="android:textColorHint">#ffff00</item>
        <item name="boxStrokeWidth">1px</item>
        <item name="hintTextColor">#ff0000</item>
        <item name="hintTextAppearance">@style/InputHint.TextAppearance.v2</item>
        <item name="errorTextAppearance">@style/InputError.TextAppearance.v2</item>
    </style>

    <!-- Error -->
    <style name="InputError.TextAppearance.v2" parent="@android:style/TextAppearance">
        <item name="android:textColor">#0000ff</item>
        <item name="android:textSize">12sp</item>
    </style>

    <!-- Hint-->
    <style name="InputHint.TextAppearance.v2" parent="@android:style/TextAppearance">
        <item name="android:textColor">#0000ff</item>
        <item name="android:textSize">12sp</item>
    </style>

    <color name="creditCardInputColorHint">#181a21</color>
    <color name="creditCardInputColor">#181a21</color>

    <dimen name="default_button_height">56dp</dimen>

    <style name="MiscAllCaps">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">14sp</item>
        <item name="android:letterSpacing">0.07</item>
        <item name="android:lineSpacingExtra">10sp</item>
        <item name="textAllCaps">true</item>
    </style>

    <style name="TangoButton" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:background">@drawable/tango_button</item>
        <item name="android:insetLeft">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetRight">0dp</item>
        <item name="android:minHeight">@dimen/default_button_height</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textAppearance">@style/MiscAllCaps</item>
        <item name="android:textColor">@color/white</item>
        <item name="backgroundTint">@null</item>
    </style>

    <style name="GlobalPopup">
        <item name="android:popupMenuStyle">@style/ManageAdminsPopup</item>
    </style>

    <style name="ManageAdminsPopup" parent="Widget.AppCompat.PopupMenu">
        <item name="android:windowBackground">@color/black</item>
        <item name="android:popupBackground">@color/black</item>
    </style>

<!--    <item name="android:popupBackground">@drawable/tango_gradient_rectangle</item>-->
<!--    <item name="android:background">@drawable/fab_grey_shader</item>-->
<!--    <item name="android:itemBackground">@drawable/round_selection_dim</item>-->

    <color name="manage_admins_popup_text_color">@color/white</color>
    <color name="manage_admins_popup_background">@color/black</color>

</resources>