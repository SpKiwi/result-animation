<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="DarkGrayBody">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="DarkGrayBody.Edit">
        <item name="android:textCursorDrawable">@null</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/creditCardInputColor</item>
        <item name="android:paddingStart">12dp</item>
        <item name="android:paddingEnd">12dp</item>
        <item name="android:paddingTop">0dp</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:gravity">center_vertical|start</item>
    </style>

    <!-- Container -->
    <style name="DarkGrayBody.Edit.v2">
        <item name="android:textCursorDrawable">@null</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">#00ff00</item>
        <item name="android:paddingStart">12dp</item>
        <item name="android:paddingEnd">12dp</item>
        <item name="android:paddingTop">0dp</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:gravity">center_vertical|start</item>
    </style>

    <!-- Text field -->
    <style name="DarkGrayBody.InputLayout.v2" parent="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/stateful_shit</item>
        <item name="android:textColorHint">#ffff00</item>
        <item name="hintTextColor">#ff0000</item>
        <item name="hintTextAppearance">@style/InputHint.TextAppearance.v2</item>
        <item name="errorTextAppearance">@style/InputError.TextAppearance.v2</item>
    </style>

    <!-- Error -->
    <style name="InputError.TextAppearance.v2" parent="@android:style/TextAppearance">
        <item name="android:textColor">#0000ff</item>
        <item name="android:textSize">12sp</item>
    </style>

    <!-- Hint-->
    <style name="InputHint.TextAppearance.v2" parent="@android:style/TextAppearance">
        <item name="android:textColor">#0000ff</item>
        <item name="android:textSize">12sp</item>
    </style>

    <color name="creditCardInputColorHint">#181a21</color>
    <color name="creditCardInputColor">#181a21</color>

</resources>